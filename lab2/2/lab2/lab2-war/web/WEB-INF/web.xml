<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
    
    <servlet>
        <servlet-name>AllCarsServlet</servlet-name>
        <servlet-class>servlets.AllCars</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllCarsServlet</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCarServlet</servlet-name>
        <servlet-class>servlet.AddCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCarServlet</servlet-name>
        <url-pattern>/addCar</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteCarServlet</servlet-name>
        <servlet-class>servlet.DeleteCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCarServlet</servlet-name>
        <url-pattern>/deleteCar</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EditCarServlet</servlet-name>
        <servlet-class>servlet.EditCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCarServlet</servlet-name>
        <url-pattern>/editCar</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CountAddCarServlet</servlet-name>
        <servlet-class>servlet.CountAddCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CountAddCarServlet</servlet-name>
        <url-pattern>/count-add-car</url-pattern>
    </servlet-mapping>
</web-app>
